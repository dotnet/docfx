<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="14.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import Project="$(MSBuildExtensionsPath)\$(MSBuildToolsVersion)\Microsoft.Common.props" Condition="Exists('$(MSBuildExtensionsPath)\$(MSBuildToolsVersion)\Microsoft.Common.props')" />
  <PropertyGroup>
    <Configuration Condition=" '$(Configuration)' == '' ">Debug</Configuration>
    <Platform Condition=" '$(Platform)' == '' ">AnyCPU</Platform>
    <ProjectGuid>{1A7FD832-EBE9-47B2-AB59-718CB18DCA44}</ProjectGuid>
    <OutputType>Library</OutputType>
    <AppDesignerFolder>Properties</AppDesignerFolder>
    <RootNamespace>docfx.msbuild</RootNamespace>
    <AssemblyName>docfx.msbuild</AssemblyName>
    <TargetFrameworkVersion>v4.5.2</TargetFrameworkVersion>
    <PackageOutputPath Condition=" '$(PackageOutputPath)'=='' ">$(MSBuildThisFileDirectory)..\..\..\artifacts\$(MSBuildProjectName)\$(Configuration)</PackageOutputPath>
    <NugetPath Condition=" '$(NugetPath)'=='' ">$(LocalAppData)\NuGet\NuGet.exe</NugetPath>
    <DocfxOutputPath>$(MSBuildThisFileDirectory)..\..\..\target\$(Configuration)\docfx\</DocfxOutputPath>
    <OutputPath>bin\$(Configuration)</OutputPath>
    <NuspecPath>$(MSBuildProjectName).nuspec</NuspecPath>
    <PackageVersion Condition=" '$(PackageVersion)'=='' ">0.0.1-alpha</PackageVersion>
    <WithSuffix Condition=" '$(WithSuffix)'=='' ">True</WithSuffix>
    <PackageVersionWithSuffix Condition="$(WithSuffix)">$(PackageVersion)-$([System.DateTime]::Now.ToString(`yyyyMMddHHmm`))</PackageVersionWithSuffix>
    <PackageVersionWithSuffix Condition="!$(WithSuffix)">$(PackageVersion)</PackageVersionWithSuffix>
  </PropertyGroup>
  <ItemGroup>
    <None Include="build\docfx.msbuild.targets">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="content\toc.yml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="content\docfx.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="docfx.msbuild.nuspec">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  <ItemGroup>
    <Content Include="Readme.txt">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\docfx\docfx.csproj">
      <Project>{ab97bedf-d207-42e9-a56f-c9dd395bfcdd}</Project>
      <Name>docfx</Name>
    </ProjectReference>
  </ItemGroup>
  <Import Project="$(MSBuildToolsPath)\Microsoft.CSharp.targets" />
  <!-- To modify your build process, add your task inside one of the targets below and uncomment it.
       Other similar extension points exist, see Microsoft.Common.targets.
  <Target Name="BeforeBuild">
  </Target>
  -->
  <Target Name="AfterBuild">
    <Warning Text="Unable to find nuget.exe! Please install nuget.exe to $(NugetPath) to build nuget package $(MSBuildProjectName)" Condition="!Exists($(NugetPath))">
    </Warning>
    <CallTarget Targets="BuildNugetPackage" Condition="Exists($(NugetPath))" />
  </Target>
  <Target Name="BuildNugetPackage">
    <ItemGroup>
      <DocfxFiles Include="$(DocfxOutputPath)\**\*.dll">
      </DocfxFiles>
      <DocfxFiles Include="$(DocfxOutputPath)\**\*docfx.exe*">
      </DocfxFiles>
    </ItemGroup>
    <Copy SourceFiles="@(DocfxFiles)" DestinationFolder="$(OutputPath)\tools" />
    <Exec Command="&quot;$(NugetPath)&quot; pack &quot;$(OutputPath)$(NuspecPath)&quot; -Version &quot;$(PackageVersionWithSuffix)&quot; -OutputDirectory &quot;bin/$(Configuration)&quot;" />
    <Copy SourceFiles="$(OutputPath)$(MSBuildProjectName).$(PackageVersionWithSuffix).nupkg" DestinationFolder="$(PackageOutputPath)" />
    <Message Text="Successfully created package '$(PackageOutputPath)$(MSBuildProjectName).$(PackageVersionWithSuffix).nupkg'." />
  </Target>
</Project>