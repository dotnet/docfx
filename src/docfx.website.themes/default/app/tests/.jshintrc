{
  /* ENFORCING */
  /* prohibit bitwise operators, which are rare in JS and often mistype of && */
  "bitwise": true,
  "curly": false,
  "eqeqeq": true,
  /* for (key in obj) if (obj.hasOwnProperty(key)) ... */
  "forin": false,
  /* suppress warnings about global strict mode which can break 3rd party widgets */
  "globalstrict": false,
  /* prohibits the use of a variable before it was defined */
  /* setting to "nofunc" to allow function declarations to be ignored */
  "latedef": "nofunc",
  /* requries you to capitalize names of constructor functions */
  "newcap": true,
  /* prohibits the use of arguments.caller and arguments.callee */
  "noarg": true,
  /* prohibits the use of explicitly undeclared variables */
  "undef": true,
  /* warns when you define and never use your variables */
  "unused": false,

  /* RELAXING */
  /* warns about using [] notation when it can be expressed in dot notation */
  "sub": true,
  "boss": false,
  "eqnull": true,

  /* ENVIRONMENT */
  /* defines globals exposed by modern browsers */
  "browser": true,
  "jquery": true,
  "globals": {
    "ace": true,
    "csplay": true,
    "angular": true,
    "jsyaml": true,
    "marked": true,
    "google": true,
    "hljs": true,
    "L": true,
    "console": true
  }
}