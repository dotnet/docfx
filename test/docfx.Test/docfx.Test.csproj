<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <FodyGenerateXsd>false</FodyGenerateXsd>
    <IsPackable>false</IsPackable>
    <Nullable>disable</Nullable>
    <EnableNETAnalyzers>false</EnableNETAnalyzers>
    <Exclude>[xunit.*]*,[*.Views]*,[*]ChakraHost.Hosting.*</Exclude>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="LibGit2Sharp" Version="0.27.0-preview-0096" />
    <PackageReference Include="Fody" Version="6.3.0" />
    <PackageReference Include="ModuleInit.Fody" Version="2.1.1" PrivateAssets="All" />
    <PackageReference Include="coverlet.msbuild" Version="2.8.0" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.8.3" />
    <PackageReference Include="OmniSharp.Extensions.LanguageClient" Version="0.18.3" />
    <PackageReference Include="yunit" Version="1.0.0-preview-0043-g13cf1e97dc" />
    <PackageReference Include="xunit" Version="2.4.1" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.4.3" />
  </ItemGroup>

  <ItemGroup>
    <None Include="*.json" CopyToOutputDirectory="PreserveNewest" />
    <None Include="*.yml" CopyToOutputDirectory="PreserveNewest" />
    <None Include="data/**/*" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../../src/docfx/docfx.csproj" />
  </ItemGroup>

</Project>
