<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <FodyGenerateXsd>false</FodyGenerateXsd>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="LibGit2Sharp" Version="0.27.0-preview-0007" />
    <PackageReference Include="Fody" Version="6.0.0" />
    <PackageReference Include="ModuleInit.Fody" Version="2.1.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="*.json" CopyToOutputDirectory="PreserveNewest" />
    <None Include="*.yml" CopyToOutputDirectory="PreserveNewest" />
    <!-- Workaround https://github.com/aspnet/Razor/issues/2162 -->
    <None Include="../../src/docfx/bin/$(Configuration)/$(TargetFramework)/docfx.deps.json" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../../src/Microsoft.DocAsTest/Microsoft.DocAsTest.csproj" />
    <ProjectReference Include="../../src/docfx/docfx.csproj" />
  </ItemGroup>

</Project>
