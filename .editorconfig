# SA1101PrefixLocalCallsWithThis
dotnet_diagnostic.SA1101.severity = none

# SA1122UseStringEmptyForEmptyStrings
dotnet_diagnostic.SA1122.severity = none

# SA1127GenericTypeConstraintsMustBeOnOwnLine
